    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/nomResto"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textAlignment="center" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/specialiteResto"
    android:textAlignment="center" />
</LinearLayout>